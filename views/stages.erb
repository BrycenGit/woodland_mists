<h1>Stages</h1>

<% if @stages.any? %>
  <ul>
    <% @stages.each do |stage| %>
      <li><a href="/stages/<%= stage.id %>"><%= stage.name %></a></li>
    <% end %>
  </ul>
<% else %>
  <p>No stages created</p>
<% end %>

<form action="/stages" method="post">
  <div class="form-group">
    <label for="name">Stage Name</label>
    <input  id ="name" name="name" class="form-control" type="text">
  </div>
  <div class="form-group">
    <label for="location">Stage Location</label>
    <input  id ="location" name="location" class="form-control" type="text">
  </div>
  <button type="submit" class="btn btn-success">Add Stage</button>
</form>